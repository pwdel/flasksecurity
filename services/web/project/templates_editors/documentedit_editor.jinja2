{% extends "layout.jinja2" %}

{% block content %}
  <div class="form-wrapper">

    <div class="logo">
      <img
        src="{{ url_for('static', filename='img/linguo.jpg') }}"
        alt="logo"
      />
    </div>

    <h1>Edit Document</h1>

  <div>

    <p><h4>Edit Your Assigned Document Below</h4></p>

    <hr>

    <p><h6>Current Document Information</h6></p>    

    <style type="text/css">
    .tg  {border-collapse:collapse;border-spacing:0;}
    .tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
      overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
      font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg .tg-ea8y{background-color:#ffc5c5;border-color:#000000;font-weight:bold;text-align:left;vertical-align:top}
    .tg .tg-73oq{border-color:#000000;text-align:left;vertical-align:top}
    </style>

    <table class="tg" style="undefined;table-layout: fixed; width: 580px">
    <colgroup>
    <col style="width: 200px">
    <col style="width: 350px">
    </colgroup>
    <thead>
      <tr>
        <th class="tg-73oq">Document Title</th>
        <th class="tg-73oq">Document Content</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="tg-73oq">{{ document.document_name }}</td>
        <td class="tg-73oq">{{ document.document_body }}</td>
      </tr>
    </tbody>
    </table>
   
    <hr>

    <div class="form-wrapper">

      <form method="POST" action="">
        {{ form.csrf_token }}
        {{ form.name }}
        <fieldset class="document_name">
          {{ form.document_name.label }}
          {{ form.document_name(placeholder='Document Name')}}
          {% if form.document_name.errors %}
            <ul class="errors">
              {% for error in form.document_name.errors %}
                <li>{{ error }}</li>{% endfor %}
            </ul>
          {% endif %}
        </fieldset>

      <p></p>


      <fieldset class="document_body">
        {{ form.document_body.label }}
        {{ form.document_body(placeholder='Document Body Content', size=100) }}
        {% if form.document_body.errors %}
          <ul class="errors">
            {% for error in form.document_body.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <p></p>

      <div class="submit-button">
         {{ form.submit }}
      </div>

      </form>


  </div>

  <p></p>

  <div>
    <a href="{{ url_for('editor_bp.documentlist_editor') }}">List of Documents</a>
  </div>

  <p></p>

{% endblock %}